        });

        $('#myTable').on('click','.sendMessageForUser',function () {
            debugger;
            var message = $('textarea#message').val();
            var id = $(this).find('span').text();
         
            console.log($('textarea#message'));

            console.log(message);
            $.post('@Url.Action("Send")',
                    {
                        message:message,
